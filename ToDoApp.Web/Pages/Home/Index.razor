@attribute [Route(HomeRoute.Index)]
@inherits HomePage

<PageTitle>Welcome</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="py-8">
    <div class="d-flex justify-space-between pb-5 align-center">
        <MudText Typo="Typo.h3">Welcome</MudText>
    </div>

    <MudGrid>
        <!-- Completion Chart -->
        <MudItem xs="12" md="4">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Completion Status</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudChart ChartType="ChartType.Donut"
                          Height="@ChartHeight"
                          InputData="@CompletitionData"
                          InputLabels="@CompletitionLabels" />
            </MudCard>
        </MudItem>

        <!-- Priority Chart -->
        <MudItem xs="12" md="4">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Priority Distribution</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudChart ChartType="ChartType.Pie"
                          InputData="@PriorityData"
                          InputLabels="@PriorityLabels"
                          Height="@ChartHeight" />
            </MudCard>
        </MudItem>

        <!-- Category Chart -->
        <MudItem xs="12" md="4">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Categories</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudChart ChartType="ChartType.Pie"
                          InputData="@CategoryData"
                          InputLabels="@CategoryLabels"
                          Height="@ChartHeight" />
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>